{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/**/*.json", "types"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./types"],
    "allowJs": true,
    "types": ["naive-ui/volar", "node"],
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
